= show_admin_navbar :new_dish

.row
  .col-sm-6
    %h2 Make menu for today
    = simple_form_for @dish, :defaults => {:required => false} do |f|
      = f.error_notification
      .form-inputs
        = f.input :name
        = f.input :price, input_html: { step: 0.01 }
        = f.input :kind, label: false do
          = f.select :kind, kinds_as_options_for_select(@dish),{},
            class: 'form-control'
      .form-actions
        = f.button :submit
  .col-sm-6
    = render "menu", dishes: @dishes
